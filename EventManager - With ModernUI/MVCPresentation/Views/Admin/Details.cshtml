@model MVCPresentation.Models.ApplicationUser

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>ApplicationUser</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.GivenName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GivenName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FamilyName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FamilyName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UserID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.City)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.State)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.State)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Zip)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Zip)
        </dd>

        <dt>
            Assigned Roles:
        </dt>

        <dd>
            <ul>
                @foreach (string role in ViewBag.Roles)
                {
                    <li>
                        <strong>
                            @role @Html.ActionLink("Remove Role", "RemoveRole", new { id = Model.Id, Role = role })
                        </strong>
                        @if (role == "Administrator")
                        {
                            <span style="color: red; font-weight:bold;"> @ViewBag.Error</span>
                        }
                    </li>
                }
            </ul>
        </dd>

        <dt>
            Unassigned Roles:
        </dt>

        <dd>
            <ul>
                @foreach (string role in ViewBag.NoRoles)
                {
                    <li>
                        <strong>
                            @role @Html.ActionLink("Add Role", "AddRole", new { id = Model.Id, Role = role })
                        </strong>
                    </li>
                }
            </ul>
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
