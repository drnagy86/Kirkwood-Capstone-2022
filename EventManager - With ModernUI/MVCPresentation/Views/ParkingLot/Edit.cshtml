@model MVCPresentation.Models.EditParkingLotModel
@{
    ViewBag.Title = "Edit Sublocation";
}

<h2>Details</h2>

<div>
    <h4>Edit Area</h4>
    <hr />
    @Html.ValidationMessage("", new { @class = "text-danger" })
    @using (Html.BeginForm("Edit", "ParkingLot", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <dl class="dl-horizontal">
            @Html.HiddenFor(model => model.Name)
            @Html.HiddenFor(model => model.Description)
            @Html.HiddenFor(model => model.LocationID)
            @Html.HiddenFor(model => model.LotID)
            @Html.HiddenFor(model => model.ImageName)
            <dt>
                @Html.DisplayNameFor(model => model.NewName)
            </dt>

            <dd>
                @Html.TextBoxFor(model => model.NewName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NewName, "", new { @class = "text-danger" })
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.NewDescription)
            </dt>

            <dd>
                @Html.TextAreaFor(model => model.NewDescription, new
                {
                    @class = "form-control",
                    rows = 5
                })
                @Html.ValidationMessageFor(model => model.NewDescription, "", new { @class = "text-danger" })
            </dd>

            <dt>
                <label>Image</label>
            </dt>

            <dd>
                @Html.TextBoxFor(model => model.NewImage, new { type = "file", @class = "form-control", accept = ".jpg,.gif,.png,.apng,.svg,.bmp" })
            </dd>
        </dl>

        <input type="submit" class="btn btn-primary" />
        @Html.ActionLink("Cancel", "Index", new { locationId = Model.LocationID }, new { onclick = "return confirm('This will discard any changes you have made. Continue?');", @class = "btn btn-secondary" })
    }

</div>
