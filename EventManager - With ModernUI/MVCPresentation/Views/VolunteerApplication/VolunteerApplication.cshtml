@model DataObjects.Availability

@{
    ViewBag.Title = "Volunteer Application";
}

<h2>Volunteer Application</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form">
    <h4>Availability</h4>
    <p>Select your availability and apply to become a volunteer.</p>
    <p>Select the hours and days a week you can work.</p>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.HiddenFor(model => model.ForeignID, new { htmlAttributes = new { @class = "form-control" } })
        @Html.HiddenFor(model => model.DateID, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TimeStart, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.EditorFor(model => model.TimeStart, new { htmlAttributes = new { @class = "form-control", id = "volunteerStartTime" } })
            <div class="height-30px">
                @Html.ValidationMessageFor(model => model.TimeStart, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TimeEnd, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.EditorFor(model => model.TimeEnd, new { htmlAttributes = new { @class = "form-control", id = "volunteerEndTime" } })
            <div class="height-30px">
                @Html.ValidationMessageFor(model => model.TimeEnd, "", new { @class = "text-danger" })
                <p class="text-danger" id="volunteerEndTimeValidationMessage"></p>
            </div>
        </div>
    </div>
    <div class="row">

        <div class="col-md">
            @Html.LabelFor(model => model.Sunday, htmlAttributes: new { @class = "control-label col-sm" })

            <div class="checkbox">
                @Html.EditorFor(model => model.Sunday)
                @Html.ValidationMessageFor(model => model.Sunday, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="col-md">
            @Html.LabelFor(model => model.Monday, htmlAttributes: new { @class = "control-label col-sm" })

            <div class="checkbox">
                @Html.EditorFor(model => model.Monday)
                @Html.ValidationMessageFor(model => model.Monday, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="col-md">
            @Html.LabelFor(model => model.Tuesday, htmlAttributes: new { @class = "control-label col-sm" })

            <div class="checkbox">
                @Html.EditorFor(model => model.Tuesday)
                @Html.ValidationMessageFor(model => model.Tuesday, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md">
            @Html.LabelFor(model => model.Wednesday, htmlAttributes: new { @class = "control-label col-sm" })

            <div class="checkbox">
                @Html.EditorFor(model => model.Wednesday)
                @Html.ValidationMessageFor(model => model.Wednesday, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md">
            @Html.LabelFor(model => model.Thursday, htmlAttributes: new { @class = "control-label col-sm" })

            <div class="checkbox">
                @Html.EditorFor(model => model.Thursday)
                @Html.ValidationMessageFor(model => model.Thursday, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md">
            @Html.LabelFor(model => model.Friday, htmlAttributes: new { @class = "control-label col-sm" })

            <div class="checkbox">
                @Html.EditorFor(model => model.Friday)
                @Html.ValidationMessageFor(model => model.Friday, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md">
            @Html.LabelFor(model => model.Saturday, htmlAttributes: new { @class = "control-label col-sm" })

            <div class="checkbox">
                @Html.EditorFor(model => model.Saturday)
                @Html.ValidationMessageFor(model => model.Saturday, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>
    <div class=" row height-30px">
        <p class="text-danger" id="volunteerDaysOfWeekValidationMessage"></p>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Apply to Volunteer" class="btn btn-primary" id="applyToVolunteerSubmit" disabled />
            <span class="col-md-2 mx-2">@Html.ActionLink("Cancel", "Index", "Home", routeValues: null, htmlAttributes: new { @class = "btn btn-danger", onclick = "return confirm('Are sure want to cancel?');" })</span>
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

